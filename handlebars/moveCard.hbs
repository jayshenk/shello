<div class="actions-modal">
  <header>
    <h1>Move Card</h1>
    <a class="close"></a>
  </header>
  <form action="#" method="post">
    <fieldset>
      <div class="select-container">
        <label for="list">List</label>
        <select id="list">
          {{#each lists}}
            <option value="{{id}}">{{name}}</option>
          {{/each}}
        </select>
      </div>
      <div class="select-container">
        <label for="position">Position</label>
        <select id="position">
          {{#each positions}}
            <option value="{{.}}">{{.}}</option>
          {{/each}}
        </select>
      </div>
      <button type="submit">Move</button>
    </fieldset>
  </form>
</div>
